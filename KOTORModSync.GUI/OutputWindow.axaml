<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KOTORModSync.GUI"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="KOTORModSync.GUI.OutputWindow"
        Title="Output Window">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Output Window" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        <ScrollViewer x:Name="logScrollViewer" Grid.Row="1" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled">
            <TextBox x:Name="logTextBox" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True"/>
        </ScrollViewer>
    </Grid>
</Window>
