<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:KOTORModSync.GUI"
        x:Class="KOTORModSync.GUI.MainWindow"
        Title="KOTORModSync"
        Width="1200"
        Height="600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="KOTORModSync" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <TreeView Name="leftTreeView" Margin="10">
                    <TreeView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox IsChecked="{Binding IsChecked}" />
                                <TextBlock Text="{Binding Name}"
                                           local:AttachedProperties.ItemClickCommand="{Binding DataContext.ItemClickCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                                           local:AttachedProperties.ItemClickCommandParameter="{Binding}" />
                            </StackPanel>
                        </DataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </ScrollViewer>
            <ListBox x:Name="rightListBox" Grid.Column="1" Margin="10" />

            <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Center">
                <Button Content="Load Installation File" Margin="0 10" Click="Button1_Click" />
                <Button Content="Define Custom Steps" Margin="0 10" />
                <Button Content="Start new install" Margin="0 10" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
