<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:KOTORModSync.GUI"
        x:Class="KOTORModSync.GUI.MainWindow"
        Title="KOTORModSync"
        Width="600"
        Height="600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="KOTORModSync" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <TreeView Name="leftTreeView" Margin="10" Items="{Binding Components}">
                    <TreeView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </ScrollViewer>


            <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center">
                <Button Content="Load Mods from Directory" Margin="0 10" Click="Button1_Click" />
                <Button Content="Define Custom Steps" Margin="0 10" />
                <Button Content="Start new install" Margin="0 10" />
            </StackPanel>

            <ListBox Grid.Column="2" Name="rightListBox" Margin="10">
                <ListBoxItem>
                    <CheckBox Content="Checkbox A" />
                </ListBoxItem>
                <ListBoxItem>
                    <CheckBox Content="Checkbox B" />
                </ListBoxItem>
                <ListBoxItem>
                    <CheckBox Content="Checkbox C" />
                </ListBoxItem>
            </ListBox>
        </Grid>
    </Grid>

</Window>
