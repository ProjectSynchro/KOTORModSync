<Project>
    <!-- ensure this is defined, sometimes is ignored in cli -->
    <PropertyGroup>
        <SolutionDir Condition="'$(SolutionDir)'=='' or '$(SolutionDir)'=='*Undefined*'">..\..\</SolutionDir>
    </PropertyGroup>
    <PropertyGroup>
        <SelfContained>true</SelfContained>
        <TargetFramework>net6.0</TargetFramework>
        <Platform>x64</Platform>
        <RuntimeIdentifier>linux-x64</RuntimeIdentifier>
        <PublishDir>$(SolutionDir)\bin\publish\SelfContained\net6.0\linux-x64\</PublishDir>
        <PublishSingleFile>true</PublishSingleFile>
        <PublishReadyToRun>true</PublishReadyToRun>
        <_TargetId>Folder</_TargetId>
        <PublishProtocol>FileSystem</PublishProtocol>
        <Configuration>Release</Configuration>
    </PropertyGroup>

    <Target Name="PostBuild" AfterTargets="PostBuildEvent" Condition=" '$(OS)' == 'Windows_NT'">

        <Exec Condition=" '$(OS)' == 'Windows_NT'" Command="xcopy /Y $(SolutionDir)vendor\bin\TSLPatcherCLI.exe $(PublishDir)" />
        <Exec Condition=" '$(IsUnix)' == 'true'" Command="cp -f $(SolutionDir)vendor/bin/TSLPatcherCLI.exe $(PublishDir)" />

        <Exec Condition=" '$(OS)' == 'Windows_NT'" Command="xcopy /Y $(SolutionDir)vendor\bin\pykotorcli.exe $(PublishDir)" />
        <Exec Condition=" '$(IsUnix)' == 'true'" Command="cp -f $(SolutionDir)vendor/bin/pykotorcli.exe $(PublishDir)" />

        <Exec Condition=" '$(OS)' == 'Windows_NT'" Command="xcopy /Y $(SolutionDir)vendor\bin\pykotorcli $(PublishDir)" />
        <Exec Condition=" '$(IsUnix)' == 'true'" Command="cp -f $(SolutionDir)vendor/bin/pykotorcli $(PublishDir)" />

        <!-- WindowsDeleteString returntype changes from int to IntPtr HRESULT after net framework 4.x.x, replace with our patches. -->
        <Exec Condition=" '$(OS)' == 'Windows_NT' AND '$(Platform)'=='x86' AND '$(TargetFramework)' == 'net462' " Command="xcopy /Y $(SolutionDir)vendor\lib\Avalonia.Win32_net4.x_x86.dll $(PublishDir)" />
        <Exec Condition=" '$(OS)' == 'Windows_NT' AND '$(Platform)'=='x86' AND '$(TargetFramework)' == 'net462' " Command="del /F $(PublishDir)Avalonia.Win32.dll" />
        <Exec Condition=" '$(OS)' == 'Windows_NT' AND '$(Platform)'=='x86' AND '$(TargetFramework)' == 'net462' " Command="ren $(PublishDir)Avalonia.Win32_net4.x_x86.dll Avalonia.Win32.dll" />
        <Exec Condition=" '$(IsUnix)' == 'true' AND '$(Platform)'=='x86' AND '$(TargetFramework)' == 'net462' " Command="cp $(SolutionDir)vendor\lib\Avalonia.Win32_net4.x_x86.dll $(PublishDir)" />
        <Exec Condition=" '$(IsUnix)' == 'true' AND '$(Platform)'=='x86' AND '$(TargetFramework)' == 'net462' " Command="rm -f $(PublishDir)Avalonia.Win32.dll" />
        <Exec Condition=" '$(IsUnix)' == 'true' AND '$(Platform)'=='x86' AND '$(TargetFramework)' == 'net462' " Command="mv $(PublishDir)Avalonia.Win32_net4.x_x86.dll $(PublishDir)Avalonia.Win32.dll" />

    </Target>
</Project>
